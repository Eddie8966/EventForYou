                <TextBlock HorizontalAlignment="Left" Margin="186,926,0,0" TextWrapping="Wrap" Text="0.00 рублей" VerticalAlignment="Top" FontSize="48"/>
                <Button Content="Button" HorizontalAlignment="Left" Margin="857,917,0,0" VerticalAlignment="Top" Background="#FFFFE5FC" Width="415" Height="78" BorderBrush="Black" Click="CL">
                    <Button.Template>
                        <ControlTemplate>
                            <Grid>
                                <Rectangle RadiusX="22" RadiusY="22" StrokeThickness="2" Fill="#FFE5FC"/>
